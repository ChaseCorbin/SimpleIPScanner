<Window x:Class="SimpleIPScanner.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="480"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Icon="Assets/app.ico"
        Background="{StaticResource PrimaryDarkBrush}">

    <Border Padding="28,24,28,28">
        <StackPanel>

            <!-- ===== ABOUT ===== -->
            <TextBlock Text="ABOUT" FontSize="10" FontWeight="Bold" FontFamily="Segoe UI"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="2,0,0,8"/>

            <Border Background="{StaticResource CardDarkBrush}" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Mini switch stack icon (matches header logo) -->
                    <Viewbox Grid.Column="0" Height="44" Width="66"
                             VerticalAlignment="Top" Stretch="Uniform" Margin="0,2,18,0">
                        <Canvas Width="54" Height="36">
                            <Rectangle Canvas.Left="0" Canvas.Top="3" Width="2" Height="30"
                                       Fill="{StaticResource AccentCyanBrush}" RadiusX="1" RadiusY="1"/>
                            <!-- Switch 1 — top, inactive -->
                            <Rectangle Canvas.Left="4" Canvas.Top="0"  Width="48" Height="10" Fill="{StaticResource CardDarkBrush}" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="4" Canvas.Top="0"  Width="48" Height="10" Fill="Transparent" Stroke="{StaticResource BorderDarkBrush}" StrokeThickness="0.8" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="9"  Canvas.Top="3" Width="4" Height="4" Fill="{StaticResource BorderDarkBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="15" Canvas.Top="3" Width="4" Height="4" Fill="{StaticResource BorderDarkBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="21" Canvas.Top="3" Width="4" Height="4" Fill="{StaticResource BorderDarkBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="27" Canvas.Top="3" Width="4" Height="4" Fill="{StaticResource BorderDarkBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="33" Canvas.Top="3" Width="4" Height="4" Fill="{StaticResource BorderDarkBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Ellipse   Canvas.Left="45" Canvas.Top="3" Width="4" Height="4" Fill="{StaticResource OfflineGrayBrush}"/>
                            <!-- Switch 2 — middle, partial -->
                            <Rectangle Canvas.Left="4" Canvas.Top="13" Width="48" Height="10" Fill="{StaticResource CardDarkBrush}" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="4" Canvas.Top="13" Width="48" Height="10" Fill="Transparent" Stroke="{StaticResource BorderDarkBrush}" StrokeThickness="0.8" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="9"  Canvas.Top="16" Width="4" Height="4" Fill="{StaticResource AccentCyanBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="15" Canvas.Top="16" Width="4" Height="4" Fill="{StaticResource AccentCyanBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="21" Canvas.Top="16" Width="4" Height="4" Fill="{StaticResource AccentCyanBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="27" Canvas.Top="16" Width="4" Height="4" Fill="{StaticResource BorderDarkBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="33" Canvas.Top="16" Width="4" Height="4" Fill="{StaticResource BorderDarkBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Ellipse   Canvas.Left="45" Canvas.Top="16" Width="4" Height="4" Fill="{StaticResource AccentCyanBrush}" Opacity="0.5"/>
                            <!-- Switch 3 — bottom, fully active -->
                            <Rectangle Canvas.Left="4" Canvas.Top="26" Width="48" Height="10" Fill="{StaticResource CardDarkBrush}" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="4" Canvas.Top="26" Width="48" Height="10" Fill="Transparent" Stroke="{StaticResource AccentCyanBrush}" StrokeThickness="1" RadiusX="2" RadiusY="2"/>
                            <Rectangle Canvas.Left="9"  Canvas.Top="29" Width="4" Height="4" Fill="{StaticResource AccentCyanBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="15" Canvas.Top="29" Width="4" Height="4" Fill="{StaticResource AccentCyanBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="21" Canvas.Top="29" Width="4" Height="4" Fill="{StaticResource AccentCyanBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="27" Canvas.Top="29" Width="4" Height="4" Fill="{StaticResource AccentCyanBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle Canvas.Left="33" Canvas.Top="29" Width="4" Height="4" Fill="{StaticResource AccentCyanBrush}" RadiusX="0.5" RadiusY="0.5"/>
                            <Ellipse   Canvas.Left="45" Canvas.Top="29" Width="4" Height="4" Fill="{StaticResource AccentCyanBrush}"/>
                        </Canvas>
                    </Viewbox>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="IP Scanner &amp; DNS Benchmark"
                                   FontSize="15" FontWeight="Bold" FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock x:Name="VersionText"
                                   FontSize="12" FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,3,0,1"/>
                        <TextBlock Text="By Chase Corbin"
                                   FontSize="12" FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,10"/>
                        <Button Content="View on GitHub →"
                                Style="{StaticResource GhostButton}"
                                Padding="10,5" FontSize="12"
                                HorizontalAlignment="Left"
                                Click="GitHubLink_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== UPDATES ===== -->
            <TextBlock Text="UPDATES" FontSize="10" FontWeight="Bold" FontFamily="Segoe UI"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="2,22,0,8"/>

            <Border Background="{StaticResource CardDarkBrush}" CornerRadius="10" Padding="20">
                <StackPanel>
                    <CheckBox x:Name="AutoUpdateCheckBox"
                              Content="Check for updates automatically on startup"
                              Style="{StaticResource ModernCheckBox}"
                              Checked="AutoUpdate_Changed"
                              Unchecked="AutoUpdate_Changed"/>

                    <TextBlock Text="When enabled, the app silently checks GitHub on launch and shows a banner if a new version is available."
                               FontSize="11" FontFamily="Segoe UI"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="26,6,0,16"/>

                    <!-- Divider -->
                    <Border Height="1" Background="{StaticResource BorderDarkBrush}" Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="CheckNowBtn"
                                Content="Check Now"
                                Style="{StaticResource GhostButton}"
                                Padding="16,7" FontSize="13"
                                Click="CheckNow_Click"/>
                        <TextBlock x:Name="UpdateStatusText"
                                   FontSize="13" FontFamily="Segoe UI"
                                   VerticalAlignment="Center"
                                   Margin="14,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ===== PORT SCANNING ===== -->
            <TextBlock Text="PORT SCANNING" FontSize="10" FontWeight="Bold" FontFamily="Segoe UI"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="2,22,0,8"/>

            <Border Background="{StaticResource CardDarkBrush}" CornerRadius="10" Padding="20">
                <StackPanel>

                    <!-- Common -->
                    <RadioButton x:Name="ModeCommonRadio" Content="Common ports"
                                 GroupName="PortMode" Style="{StaticResource ModernRadioButton}"
                                 Checked="PortMode_Changed"/>
                    <TextBlock Text="Scans 21 well-known ports: HTTP, HTTPS, SSH, RDP, SMB, and more."
                               FontSize="11" FontFamily="Segoe UI"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap" Margin="26,4,0,14"/>

                    <Border Height="1" Background="{StaticResource BorderDarkBrush}" Margin="0,0,0,14"/>

                    <!-- All -->
                    <RadioButton x:Name="ModeAllRadio" Content="All ports (1–65535)"
                                 GroupName="PortMode" Style="{StaticResource ModernRadioButton}"
                                 Checked="PortMode_Changed"/>
                    <TextBlock Text="Scans every TCP port. Expect significantly longer scan times per device."
                               FontSize="11" FontFamily="Segoe UI"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap" Margin="26,4,0,14"/>

                    <Border Height="1" Background="{StaticResource BorderDarkBrush}" Margin="0,0,0,14"/>

                    <!-- Custom -->
                    <RadioButton x:Name="ModeCustomRadio" Content="Custom ports"
                                 GroupName="PortMode" Style="{StaticResource ModernRadioButton}"
                                 Checked="PortMode_Changed"/>
                    <TextBlock Text="Enter the port numbers to scan, separated by commas."
                               FontSize="11" FontFamily="Segoe UI"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap" Margin="26,4,0,8"/>
                    <TextBox x:Name="CustomPortsBox"
                             Style="{StaticResource ModernTextBox}"
                             Margin="26,0,0,0"
                             TextChanged="CustomPorts_Changed"/>

                </StackPanel>
            </Border>

            <!-- Close -->
            <Button Content="Close"
                    Style="{StaticResource GhostButton}"
                    Padding="28,9" Margin="0,22,0,0"
                    HorizontalAlignment="Right"
                    IsDefault="True"
                    Click="CloseButton_Click"/>

        </StackPanel>
    </Border>
</Window>
